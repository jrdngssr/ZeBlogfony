{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Imgsrc</th>
                <td>{{ article.imgsrc }}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{{ article.datecreate ? article.datecreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedate</th>
                <td>{{ article.updatedate ? article.updatedate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('articles_index') }}">back to list</a>

    <a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('articles/_delete_form.html.twig') }}
{% endblock %}
